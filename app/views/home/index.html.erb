      <div class="col-md-8">
        <h1 class="page-title text-center mb-4">Data Residency Example</h1>
          <div class="text-center">
            <%= button_to user_github_omniauth_authorize_path, class: "btn btn-dark btn-lg", data: { turbo: false } do %>
